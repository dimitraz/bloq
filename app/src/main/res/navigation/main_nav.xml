<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main_nav"
            app:startDestination="@id/blankFragment">

    <activity android:id="@+id/mainActivity"
              android:name="org.wit.blocky.MainActivity"
              android:label="activity_main"
              tools:layout="@layout/activity_main"/>

    <fragment android:id="@+id/blankFragment"
              android:name="org.wit.blocky.views.BlankFragment"
              android:label="blank_fragment"
              tools:layout="@layout/blank_fragment">
        <action
                android:id="@+id/to_overview"
                app:destination="@id/destination_overview"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"/>

        <action android:id="@+id/action_blankFragment_to_mainActivity"
                app:destination="@id/mainActivity"/>
    </fragment>

    <fragment
            android:id="@+id/destination_overview"
            android:name="org.wit.blocky.views.overview.OverviewFragment"
            android:label="overview_fragment"
            tools:layout="@layout/overview_fragment"/>
</navigation>