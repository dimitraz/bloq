<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main_nav"
            app:startDestination="@id/destination_home">

    <!-- Main activity -->
    <activity
            android:id="@+id/mainActivity"
            android:name="org.wit.blocky.MainActivity"
            android:label="activity_main"
            tools:layout="@layout/activity_main"/>

    <!-- Home fragment (start dest) -->
    <fragment
            android:id="@+id/destination_home"
            android:name="org.wit.blocky.views.home.HomeFragment"
            android:label="homeFragment"
            tools:layout="@layout/home_fragment">
        <action
                android:id="@+id/action_homeFragment_to_destination_overview"
                app:destination="@id/destination_overview"/>
        <action android:id="@+id/action_destination_home_to_destination_profile"
                app:destination="@id/destination_profile"/>
        <action android:id="@+id/action_destination_home_to_destination_entry" app:destination="@id/destination_entry"/>
        <action android:id="@+id/to_entry_pager"
                app:destination="@id/destination_entry_pager"/>
    </fragment>

    <!-- Overview fragment -->
    <fragment
            android:id="@+id/destination_overview"
            android:name="org.wit.blocky.views.overview.OverviewFragment"
            android:label="overview_fragment"
            tools:layout="@layout/overview_fragment">
        <action
                android:id="@+id/action_destination_overview_to_homeFragment"
                app:destination="@id/destination_home"/>
    </fragment>

    <!-- Profile fragment-->
    <fragment
            android:id="@+id/destination_profile"
            android:name="org.wit.blocky.views.profile.EntryFragment"
            android:label="profileFragment"
            tools:layout="@layout/profile_fragment"/>
    <fragment android:id="@+id/destination_entry" android:name="org.wit.blocky.views.entry.EntryFragment"
              android:label="EntryFragment"/>
    <fragment android:id="@+id/destination_entry_pager" android:name="org.wit.blocky.views.entryPager.EntryPagerFragment"
              android:label="EntryPagerFragment"/>

</navigation>